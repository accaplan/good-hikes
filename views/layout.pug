doctype html
html
  head
      block head
        title="Good Hikes"
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/user-form.css')
        link(rel='stylesheet' href='/stylesheets/layout.css')
        link(rel="icon" href="/favicon.ico")
        script(src='https://use.fontawesome.com/36b0eae01e.js')
        script(src="https://kit.fontawesome.com/d56e8f41fb.js" crossorigin="anonymous")
        script(src='/javascripts/layout.js')
        script(src="/javascripts/logout.js")

  body
    nav(id='nav-top')
      div(id="div-left-links")
        div
          a(href='/')
            img#header-image(src='/images/logo2.png')
        div#myHike-explore-container
          div(id="my-hikes-link")
            a(id='hike-collection-link' href='/collections') My Hikes
          div(id="explore-link-container")
            a(id='explore-link' href='/search?query=') Explore
      div(id="div-center-search")
        form(action='/search' method='get' id='search-form')
          input(type="text" id="search-input" name="query" placeholder="Search Hikes" value=searchQuery)
          button#search-button.btn(type='submit')
            i(class='fa fa-search')
      div(id="div-right-buttons")
        if locals.authenticated
          div(id="welcome-text")
            p Welcome #{locals.user.username}!
            form(action='/users/logout' method='post')
              button.btn.btn-nav(id="user-logout" type='submit') Logout
        else
          span
            button.btn.btn-nav(type="submit" id="user-demo" href='/') Demo Login
            a.btn.btn-nav(id="user-login" href='/users/login') Login
            a.btn.btn-nav(id="user-signup" href='/users/signup') Sign Up
    block content
    footer
      div.footer-techs
        div.footer-tech javascript
        div.footer-tech Node.Js
        div.footer-tech SQL
        div.footer-tech PostgreSQL
        div.footer-tech HTML 5
        div.footer-tech CSS
        div.footer-tech Git
        div.footer-tech Express JS
        div.footer-tech PUG
      div.footer-copy-about
        div.footer-copyright Copyright Â©
          a(href="/about") Brian May | Elan Katz | Frances Lau | Lana Komar
        div
          a.btn.btn-git(href="https://github.com/frances-y-h/good-hikes" target="_blank") GitHub Repo
          a.btn.btn-nav(href="/about") About Us
      div.footer-good-hikes Good Hikes is a full-stack hike tracking platform inspired by
        a(href="https://www.goodreads.com/" target="_blank") GoodReads
        div.footer-gh and
        a(href="https://www.alltrails.com/" target="_blank") AllTrails.
