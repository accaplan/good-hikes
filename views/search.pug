extends layout


block content
  link(rel='stylesheet' href='/stylesheets/search.css')
  script(src="/javascripts/search.js")
  body
    h1.search-header Advanced Search
    div.search-container
      form(action='/search' method='get' id='search-form')
        input(type="text" id="search-input" name="query" placeholder="Search Hikes")
        button#search-button.btn(type='submit') Search
        //-   i(class='fa fa-search')
      ul.search-toggles
        li.toggle#sort Sort
            label(for="easy")
                input.checkbox(type="checkbox" id="easy" name="difficulty" value="test")
            //- label(for="")
            //-     input(type="checkbox") Easy
        li.toggle#difficulty Difficulty
        li.toggle#length Length
        li.toggle#elevation  Elevation Gain
        li.toggle#routeType Route Type
        li.toggle#rating Rating
        li.toggle#suitabilityTags Suitability Tags
        li.toggle#attractionTags Attraction Tags
    h1.hike-header Hike Search Results
    div.hike-list
        each hike in hikes
            a.hike-card(href=`hikes/${hike.id}`)
              div.hike-img(style=`background-image: url('${hike.imgUrl}'); border-top-left-radius: 10px; border-top-right-radius: 10px; background-position: center; background-size: cover;`)
              div.card-text
                div.hike-name-location
                  div.hike-name #{hike.name}
                  div.hike-location #{hike.CityPark.name}, #{hike.State.state}
                div.hike-level-review
                  div.hike-level #{hike.Difficulty.level}
                  div.hike-stars
                    span.star-sprite(style=`width:${avgReviewPtg}%`)
                  div.hike-avg-review #{hike.avgReview}
                div.hike-length-time
                  div.hike-length #{hike.length} mi â€¢
                  div.hike-time Est. Time #{hike.length}
