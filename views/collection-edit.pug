extends layout


include utils.pug

block content

block content
    link(rel='stylesheet' href='/stylesheets/collection.css')
    
    #edit-content-div
        h2.center Edit Collections
        +validationErrorSummary(errors)
        form#form-add-collection(method="post" action="/collections/edit/new")
            input(type='hidden' name='_csrf' value=csrfToken)
            input#new-collection-input(name="collectionname" required placeholder="Add Collection name" value=collectionname)
            button.btn#add-collection-button(type="submit") Add Collection
        table 
            colgroup
                col#delete-col
                col#name-col
                col#rename-col
            thead
                tr.hike-row
                    th Delete 
                    th Collection Name
                    th 
                tbody 
                    each collection in collections 
                        tr.hike-row 
                            td.center                            
                                form(method='post' action=`/collections/${collection.id}/delete`)
                                    button.btn-delete
                                        i.fa.fa-times(id=`${collection.id}-delete-button`)
                            td= collection.name 
                            td.center
                                form(method='post' action=`/collections/${collection.id}/edit`)
                                    button.btn.btn-rename(id=`${collection.id}-rename-button`) Rename 



    
